        <Grid HorizontalAlignment="Left" Height="108" Margin="372,166,0,0" VerticalAlignment="Top" Width="1552" BorderThickness="2" BorderBrush="Black"/>

        <Grid HorizontalAlignment="Left" Height="700" Margin="372,273,0,0" VerticalAlignment="Top" Width="1548" Background="#cccccc">
            <Button Width="50" Height="50" Margin="1250,-50,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Click="MonthMinusOne" Command="{Binding UpdateCurrentShownActivities}">
            </Button>
            <TextBox Name="MonthShownTextBox" Text="{Binding CurrentShownMonth, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="100" Height="50" Margin="1300,-50,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" TextChanged="MonthShownTextBox_OnTextChanged"/>
            <Button Width="50" Height="50" Margin="1400,-50,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Click="MonthPlusOne" Command="{Binding UpdateCurrentShownActivities}" >
            </Button>

            <Hub Width="1548" Height="700" x:Name="Hub" Header="Overview" Orientation="Horizontal">
                <HubSection Header="Navn:">
                    
                    <DataTemplate>
                        <GridView Width="100" Height="auto" ItemsSource="{Binding UserCatalogSingleton.UserList}" Margin="0,59,0,0">
                            <GridView.ItemTemplate>
                                <DataTemplate>
                                   <StackPanel Orientation="Vertical" Width="auto" Height="40">
                                        <TextBox Text="{Binding Navn}" IsReadOnly="True" Height="40" />
                                    </StackPanel>
                                </DataTemplate>
                            </GridView.ItemTemplate>
                        </GridView>
                    </DataTemplate>
                </HubSection>

                <HubSection Header="Dage Samt Aktiviter">
                    <DataTemplate>
                        <StackPanel>
                            <GridView x:Name="Days" Height="auto" Width="auto" ItemsSource="{Binding DatesInMonth}" Margin="0,0,0,0">
                                <GridView.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Height="40" Width="64" Orientation="Horizontal">
                                            <TextBox Text="{Binding Mode=OneWay}" Width="40" IsReadOnly="True">
                                            </TextBox>
                                        </StackPanel>
                                    </DataTemplate>
                                </GridView.ItemTemplate>
                            </GridView>
                            <ListView x:Name="Activities" Height="auto" Width="auto" ItemsSource="{Binding UserCatalogSingleton.UserList}" Margin="-12,0,0,0">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                    <GridView Height="50" Width="auto" ItemsSource="{Binding DaysWithActivities}">
                                    <GridView.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Height="40" Width="64" Orientation="Horizontal">
                                                        <GridView Height="auto" Width="auto" ItemsSource="{Binding Mode=OneWay}" PointerEntered="OnPointEnter" PointerExited="OnPointExit" ScrollViewer.VerticalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollMode="Disabled" >
                                                            <TextBox Width="40">
                                                                <TextBox.Background>
                                                                   <SolidColorBrush Color="{Binding color}"/>
                                                                </TextBox.Background>          
                                                        </TextBox>
                                                </GridView>
                                                <!--<TextBox Text="{Binding DatesInMonth, Mode=OneWay}" IsReadOnly="True">
                                                    <TextBox.Background>
                                                        <SolidColorBrush Color="{Binding color}"/>
                                                    </TextBox.Background>
                                                </TextBox>-->
                                            </StackPanel>
                                        </DataTemplate>
                                    </GridView.ItemTemplate>
                                    </GridView>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </StackPanel>
                    </DataTemplate>
                </HubSection>
            </Hub>


